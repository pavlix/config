! fix control-arrows in vim and possibly other software
urxvt.keysym.Control-Up: \033[1;5A
urxvt.keysym.Control-Down: \033[1;5B
urxvt.keysym.Control-Left: \033[1;5D
urxvt.keysym.Control-Right: \033[1;5C

urxvt.perl-ext-common: matcher,font-size

! links
urxvt.url-launcher: firefox
urxvt.matcher.button: 1

! dynamic font size
urxvt.keysym.Control-Up: perl:font-size:increase
urxvt.keysym.Control-Down: perl:font-size:decrease

! do not scroll when I look at old lines
urxvt.scrollTtyOutput: false
urxvt.scrollWithBuffer: true
urxvt.scrollTtyKeypress: true

! disable printscreen
urxvt.print-pipe: "cat > /dev/null"
